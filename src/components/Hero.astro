        </svg>
      </a>

      <a
        href={`mailto:${personal.email}`}
        class="glass rounded-full p-2.5 hover:scale-110 transition-transform text-white hover:text-accent-blue"
        aria-label="Email"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
        </svg>
      </a>
    </div>

    <h1
      class="text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-display font-light mb-4 md:mb-6 opacity-0 drop-shadow-2xl tracking-[0.05em] uppercase"
      id="hero-name"
      data-name={personal.name}
    >
      <span class="gradient-text">{personal.name}</span>
    </h1>

    <div class="h-8 md:h-10 mb-8 overflow-hidden">
      <p
        class="font-display font-medium text-base sm:text-lg md:text-2xl text-accent-blue opacity-0 drop-shadow-md tracking-[0.1em] sm:tracking-[0.15em] uppercase"
        id="hero-tagline"
      >
        <span id="typewriter"></span>
        <span class="inline-block w-0.5 h-5 bg-accent-blue ml-1 animate-pulse"></span>
      </p>
    </div>

    <div class="flex flex-col sm:flex-row flex-wrap justify-center gap-3 md:gap-4 opacity-0 mt-6 md:mt-8 w-full px-4 sm:px-0" id="hero-cta">
      <a
        href="#projects"
        class="group relative px-6 md:px-8 py-3 rounded-full font-display uppercase tracking-widest font-semibold text-[11px] md:text-sm overflow-hidden w-full sm:w-auto"
      >
        <span class="absolute inset-0 bg-gradient-to-r from-accent-blue to-accent-purple rounded-full"></span>
        <span class="absolute inset-[2px] bg-bg-primary rounded-full transition-all group-hover:bg-opacity-0"></span>
        <span class="relative gradient-text group-hover:text-white group-hover:[-webkit-text-fill-color:white]">Projects</span>
      </a>

      <a
        href="/blog"
        class="px-6 md:px-8 py-3 rounded-full font-display uppercase tracking-widest font-semibold text-[11px] md:text-sm glass text-text-primary hover:text-accent-blue transition-colors border-accent-blue/30 w-full sm:w-auto"
      >
        Read Blog
      </a>

      <a
        href="#contact"
        class="px-6 md:px-8 py-3 rounded-full font-display uppercase tracking-widest font-semibold text-[11px] md:text-sm glass text-text-secondary hover:text-accent-purple transition-colors w-full sm:w-auto"
      >
        Contact
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0" id="scroll-indicator">
    <div class="flex flex-col items-center gap-2 text-text-muted">
      <span class="text-[0.65rem] uppercase tracking-[0.3em] font-display font-bold">Scroll</span>
      <div class="w-5 h-8 rounded-full border border-text-muted/30 flex justify-center pt-1.5">
        <div class="w-1 h-2 rounded-full bg-accent-blue animate-bounce"></div>
      </div>
    </div>
  </div>
</section>

<script>
  // Typing effect
  const phrases = [
    'AI & Management Student',
    'Software Developer',
    'Research Enthusiast',
    'Prompt Engineer',
    'Full-Stack Builder',
  ];

  const typewriter = document.getElementById('typewriter')!;
  let phraseIndex = 0;
  let charIndex = 0;
  let isDeleting = false;

  function type() {
    const current = phrases[phraseIndex];

    if (isDeleting) {
      typewriter.textContent = current.substring(0, charIndex - 1);
      charIndex--;
    } else {
      typewriter.textContent = current.substring(0, charIndex + 1);
      charIndex++;
    }

    let delay = isDeleting ? 30 : 60;

    if (!isDeleting && charIndex === current.length) {
      delay = 2000;
      isDeleting = true;
    } else if (isDeleting && charIndex === 0) {
      isDeleting = false;
      phraseIndex = (phraseIndex + 1) % phrases.length;
      delay = 400;
    }

    setTimeout(type, delay);
  }

  function scrambleText(element: HTMLElement, originalText: string) {
    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%&*<>';
    let iteration = 0;
    const interval = setInterval(() => {
      element.innerText = originalText.split('').map((letter, index) => {
        if (index < iteration) {
          return originalText[index];
        }
        return chars[Math.floor(Math.random() * chars.length)];
      }).join('');
      
      if (iteration >= originalText.length) {
        clearInterval(interval);
      }
      iteration += 1 / 2;
    }, 40);
  }

  // Hero entrance animations
  function animateHero() {
    const socials = document.getElementById('hero-socials')!;
    const name = document.getElementById('hero-name')!;
    const tagline = document.getElementById('hero-tagline')!;
    const cta = document.getElementById('hero-cta')!;
    const scroll = document.getElementById('scroll-indicator')!;

    const items = [socials, name, tagline, cta, scroll];
    items.forEach((el, i) => {
      setTimeout(() => {
        el.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        el.style.transform = 'translateY(0)';
        el.style.opacity = '1';

        // Trigger scramble when name fades in
        if (el.id === 'hero-name') {
           const span = el.querySelector('.gradient-text') as HTMLElement;
           if (span) {
             const originalText = el.getAttribute('data-name') || '';
             scrambleText(span, originalText);
           }
        }
      }, 300 + i * 200);
      el.style.transform = 'translateY(20px)';
    });

    setTimeout(type, 1400);
  }

  // Start after particles have loaded (or immediately)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', animateHero);
  } else {
    animateHero();
  }

